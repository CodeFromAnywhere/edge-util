{
  "compilerOptions": {
    "rootDir": "src",
    "lib": ["ESNext", "ES2015", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "allowImportingTsExtensions": false,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": false,
    "outDir": "build",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "allowArbitraryExtensions": true
  },
  "include": ["src"]
}
